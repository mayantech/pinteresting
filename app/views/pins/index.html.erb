<div class="panel panel-default">
<div class="panel-heading">
  <div class="panel-title">
    <h1>Listing pins</h1>
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', pin, class: "btn btn-primary btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="panel-footer">
  <%= link_to 'New Pin', new_pin_path %>
</div>
</div>
